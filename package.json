{
  "name": "eslint-config-mania",
  "version": "0.0.1",
  "description": "a manic eslint config for typescript",
  "main": "index.js",
  "private": false,
  "scripts": {
    "dev": "ts-node-dev src",
    "build": "tsc --build --clean && tsc --build --verbose",
    "start": "node dist",
    "test": "jest src",
    "lint": "eslint . --fix --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore && prettier . --write --ignore-path .gitignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beeplin/eslint-config-mania.git"
  },
  "keywords": [
    "eslint",
    "config",
    "airbnb",
    "typescript",
    "prettier",
    "react",
    "node",
    "vue",
    "mania",
    "import"
  ],
  "author": "Beep LIN",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/beeplin/eslint-config-mania/issues"
  },
  "homepage": "https://github.com/beeplin/eslint-config-mania#readme",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/experimental-utils": "^4.28.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-vue": "^7.13.0"
  },
  "peerDependencies": {
    "eslint": "^7.30.0",
    "prettier": "^2.3.2",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.0",
    "esbuild": "^0.12.15",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.30.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-node-dev": "^1.1.8",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}
